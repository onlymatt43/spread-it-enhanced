# OpenAI Configuration (Required)
OPENAI_API_KEY=REPLACE_WITH_OPENAI_API_KEY

# Google Cloud Vision (Required for image moderation)
GOOGLE_CLOUD_VISION_KEY=REPLACE_WITH_GOOGLE_VISION_API_KEY

# MongoDB (Required for lead generation)
MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@cluster.mongodb.net/spreadit

# Social Media APIs (Optional - configure only what you need)
FACEBOOK_APP_ID=REPLACE_WITH_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=REPLACE_WITH_FACEBOOK_APP_SECRET
FACEBOOK_ACCESS_TOKEN=REPLACE_WITH_FACEBOOK_ACCESS_TOKEN

TWITTER_API_KEY=REPLACE_WITH_TWITTER_API_KEY
TWITTER_API_SECRET=REPLACE_WITH_TWITTER_API_SECRET
TWITTER_ACCESS_TOKEN=REPLACE_WITH_TWITTER_ACCESS_TOKEN
TWITTER_ACCESS_TOKEN_SECRET=REPLACE_WITH_TWITTER_ACCESS_TOKEN_SECRET

LINKEDIN_CLIENT_ID=REPLACE_WITH_LINKEDIN_CLIENT_ID
LINKEDIN_CLIENT_SECRET=REPLACE_WITH_LINKEDIN_CLIENT_SECRET
LINKEDIN_ACCESS_TOKEN=REPLACE_WITH_LINKEDIN_ACCESS_TOKEN

INSTAGRAM_ACCESS_TOKEN=REPLACE_WITH_INSTAGRAM_ACCESS_TOKEN

# Security (Required)
SESSION_SECRET=REPLACE_WITH_SESSION_SECRET
API_KEY=REPLACE_WITH_WP_INTEGRATION_KEY

# Optional Moderation (Google Perspective API)
PERSPECTIVE_API_KEY=REPLACE_WITH_PERSPECTIVE_API_KEY

# Environment
NODE_ENV=production
PORT=3000

# Moderation thresholds (SafeSearch-based)
# Global defaults used if platform overrides not set
ADULT_BLOCK_LEVELS=LIKELY,VERY_LIKELY
VIOLENCE_BLOCK_LEVELS=LIKELY,VERY_LIKELY
RACY_BLOCK_LEVELS=VERY_LIKELY
TEXT_BLOCK_THRESHOLD=2

# Platform-specific overrides
# Facebook
FACEBOOK_ADULT_BLOCK_LEVELS=LIKELY,VERY_LIKELY
FACEBOOK_VIOLENCE_BLOCK_LEVELS=LIKELY,VERY_LIKELY
FACEBOOK_RACY_BLOCK_LEVELS=VERY_LIKELY

# Instagram
INSTAGRAM_ADULT_BLOCK_LEVELS=LIKELY,VERY_LIKELY
INSTAGRAM_VIOLENCE_BLOCK_LEVELS=LIKELY,VERY_LIKELY
INSTAGRAM_RACY_BLOCK_LEVELS=VERY_LIKELY

# TikTok
TIKTOK_ADULT_BLOCK_LEVELS=LIKELY,VERY_LIKELY
TIKTOK_VIOLENCE_BLOCK_LEVELS=VERY_LIKELY
TIKTOK_RACY_BLOCK_LEVELS=VERY_LIKELY