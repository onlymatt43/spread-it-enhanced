# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Vision (Required for image moderation)
GOOGLE_CLOUD_VISION_KEY=your_google_cloud_vision_api_key_here

# MongoDB (Required for lead generation)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/spreadit

# Social Media APIs (Optional - configure only what you need)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Security (Required)
SESSION_SECRET=your_session_secret_here
API_KEY=your_api_key_for_wp_integration

# Optional Moderation (Google Perspective API)
PERSPECTIVE_API_KEY=your_perspective_api_key

# Environment
NODE_ENV=production
PORT=3000